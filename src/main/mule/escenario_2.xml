		<crypto:jce-decrypt doc:name="Jce decrypt" doc:id="ba215276-42b7-40fe-aa35-c3649ce08ed8" config-ref="Crypto_Jce" algorithm="AES" keyId="AnyKeyID" />
		<ee:transform doc:name="Transform Message" doc:id="e0ccc620-064d-40ad-ac27-62fb1e6365e3">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---

	payload
]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<db:insert doc:name="Insert" doc:id="7fdadd39-28b0-4417-bb0e-7d5e3eeba096" config-ref="Database_Config">
			<db:sql><![CDATA[INSERT INTO persona(primer_nombre, segundo_nombre, primer_apellido, segundo_apellido, pais, provincia, municipio, direccion)
VALUES (1ernombre, 2donombre, 1erapellido, 2doapellido, pais, prov, mun)]]></db:sql>
			<db:input-parameters><![CDATA[#[output application/json
---
{
	persona: payload.persona map ( persona , indexOfPersona ) -> {
		"1ernombre": persona."1ernombre",
		"2donombre": persona."2donombre",
		"1erapellido": persona."1erapellido",
		"2doapellido": persona."2doapellido",
		"pais": persona."pais",
		"prov": persona."prov",
		"mun": persona."mun"
	}
}]]]></db:input-parameters>
		</db:insert>
	</flow>
</mule>
